{
    "name": "slack-app-in-tab",
    "version": "1.0.0",
    "description": "A Chrome + Firefox extension to open the Slack app with its multi-workspace sidebar in a simple browser tab.",
    "scripts": {
        "update-ua": "ts-node ua-update/index.ts",
        "build": "web-ext build --overwrite-dest -s src/",
        "test": "vitest",
        "lint": "web-ext lint -s src/",
        "sign": "web-ext sign -s src/",
        "prepare": "husky"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/jsdom": "^27.0.0",
        "@types/node": "^24.10.9",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "globals": "^17.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "memfs": "^4.56.9",
        "prettier": "3.8.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.1",
        "vitest": "^4.0.18",
        "web-ext": "^9.2.0"
    },
    "dependencies": {
        "@actions/core": "^2.0.2",
        "fontoxpath": "^3.34.0",
        "jsdom": "^27.4.0"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    }
}
